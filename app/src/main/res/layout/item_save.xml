<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="315dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="30dp">

    <ImageView
        android:id="@+id/image_recipesave"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_646"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recipename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Traditional sparea aaaa"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="By "
                    android:textColor="#D9D9D9"
                    android:textSize="8sp" />

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Chef John"
                    android:textColor="#D9D9D9"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                android:background="#FFE1B3"
                android:gravity="center"
                app:cardCornerRadius="50dp">
                <ImageView
                    android:id="@+id/star"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/star_vector"/>
                <TextView
                    android:id="@+id/ratevalue"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8sp"
                    android:text="4.0"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icontime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:src="@drawable/timer"/>
                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="5dp"
                    android:textSize="11dp"
                    android:text="20 Min"
                    android:layout_marginTop="90dp"
                    android:textColor="@color/white"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginTop="85dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="11dp"
                        android:layout_height="14dp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_union" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>



</RelativeLayout>