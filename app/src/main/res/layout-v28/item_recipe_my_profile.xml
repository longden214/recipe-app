<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:background="@drawable/bg_category">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/rectangle_646" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_semibold"
        android:includeFontPadding="false"
        android:lineHeight="@dimen/_21ssp"
        android:maxWidth="@dimen/_190sdp"
        android:maxLines="2"
        android:text="spice roasted chicken with flavored rice"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:translationZ="@dimen/_10sdp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/recipr_rate"
        android:layout_width="@dimen/_37sdp"
        android:layout_height="@dimen/_16sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#FFE1B3"
        app:cardCornerRadius="@dimen/_16sdp">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/_8sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="8dp"
            app:srcCompat="@drawable/ic_start" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="7dp"
            android:text="4.0" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/recipe_option"
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_30sdp"
        app:cardCornerRadius="@dimen/_18sdp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-13dp"
        android:layout_marginEnd="-15dp"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            app:srcCompat="@drawable/ic_more" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:translationZ="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/_17sdp"
            android:layout_height="@dimen/_17sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_timer" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="20 mins"
            android:textColor="#D9D9D9"
            android:textSize="@dimen/_11ssp" />

    </LinearLayout>

</RelativeLayout>