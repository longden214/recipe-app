<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.PasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:gravity="center"
        android:background="@color/transparent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:layout_marginEnd="@dimen/_8sdp"
            android:textColor="#121212"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/fullscreen_dialog_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:padding="8dp"
            android:text="SAVE"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_gravity="center_vertical|end"
            android:textColor="#0092FF"
            android:textSize="@dimen/_11ssp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/poppins_regular"
        android:textSize="@dimen/_11ssp"
        android:textColor="#797979"
        android:lineHeight="@dimen/_17ssp"
        android:text="Your password must be at least 8 characters."
        />

    <EditText
        android:id="@+id/item_pass_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:hint="Current password"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/item_pass_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:hint="New password"
        android:textSize="16sp"/>

    <EditText
        android:id="@+id/item_pass_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:hint="Confirm new password"
        android:textSize="16sp"/>

</LinearLayout>